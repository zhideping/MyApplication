<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:visibility="gone"
    android:orientation="vertical"
    android:id="@+id/registerView"
    android:focusableInTouchMode="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:id="@+id/zhuce_logo"
        android:visibility="gone"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:background="@drawable/nn_zhuce_logo"
        android:layout_marginTop="40dp"
        android:layout_gravity="center_horizontal"/>
    <!--<TextView-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:text="注册"-->
        <!--android:textSize="24sp"-->
        <!--android:layout_marginTop="10dp"-->
        <!--android:layout_gravity="center_horizontal"/>-->
    <LinearLayout
        android:gravity="center_vertical"
        android:paddingTop="16dp"
        android:layout_width="fill_parent"
        android:layout_height="44dp"
        android:orientation="horizontal"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp">

        <ImageView
            android:layout_width="12dp"
            android:layout_height="20dp"
            android:background="@drawable/a_icon_shouji_c" />
        <EditText
            android:id="@+id/inputusernameedittext"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="请输入手机号"
            android:layout_marginLeft="16dp"
            android:background="@null"
            android:layout_weight="1.0"
            android:maxLength="11"
            android:textSize="20dp"
            android:inputType="number"
            />
        <!--<TextView android:textSize="20dp"-->
            <!--android:textColor="@color/comm_tv_as_button_color"-->
            <!--android:gravity="center"-->
            <!--android:id="@+id/tv_get_smscode"-->
            <!--android:paddingRight="16dp"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="fill_parent"-->
            <!--android:text="@string/getsmsversion" />-->
    </LinearLayout>

    <TextView
        android:background="@color/divider_color"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        />

    <LinearLayout android:gravity="center_vertical"
        android:paddingTop="16dp"
        android:layout_width="fill_parent"
        android:layout_height="44dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp">

        <ImageView
            android:layout_width="12dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/c_icon_yanzheng_c" />
        <LinearLayout android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="2.0">
            <EditText android:textSize="20dp"
                android:id="@+id/et_reg_smscode"
                android:background="@null"
                android:paddingLeft="16dp"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:hint="请输入验证码"
                android:singleLine="true"
                android:maxLength="6"
                android:inputType="number" />
        </LinearLayout>
        <Button
            android:id="@+id/bt_get_smscode"
            android:layout_width="90dp"
            android:layout_height="20dp"
            android:text="发送验证码"
            android:textColor="#ffffff"
            android:background="@drawable/c_btn_fasong_c"
            android:textSize="14sp"
          />
    </LinearLayout>
    <TextView android:background="@color/divider_color"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"/>
    <LinearLayout android:gravity="center_vertical"
        android:paddingTop="16dp"
        android:layout_width="fill_parent"
        android:layout_height="44dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp">

        <ImageView
            android:layout_width="12dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/c_icon_xiugai_c" />
        <EditText
            android:textSize="20dp"
            android:id="@+id/et_reg_password"
            android:background="@null"
            android:paddingLeft="16dp"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:hint="请输入密码"
            android:singleLine="true"
            android:maxLength="20"
            android:layout_weight="2.0"
            android:inputType="textPassword" />
    </LinearLayout>
    <TextView android:background="@color/divider_color" android:layout_width="fill_parent" android:layout_height="1dp" android:layout_marginTop="5dp"/>
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:paddingTop="16dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="12dp"
            android:layout_height="20dp"
            android:background="@drawable/a_icon_mima_c" />
        <EditText
            android:id="@+id/et_zhuce_password_again"

            android:hint="请再次输入密码"
            android:layout_marginLeft="15dp"
            android:textSize="20dp"

            android:background="@null"

            android:layout_width="fill_parent"
            android:layout_height="fill_parent"

            android:singleLine="true"
            android:maxLength="20"
            android:layout_weight="2.0"
            android:inputType="textPassword" />


    </LinearLayout>
    <TextView android:background="@color/divider_color" android:layout_width="fill_parent" android:layout_height="1dp" android:layout_marginTop="5dp"/>
    <!--<Button android:textSize="20dp"-->
        <!--android:textColor="@color/white"-->
        <!--android:gravity="center"-->
        <!--android:id="@+id/reg_confirm"-->
        <!--android:background="@drawable/b_btn_zhuce_c"-->
        <!--android:layout_width="fill_parent"-->
        <!--android:layout_height="30dp"-->
        <!--android:layout_marginRight="50dp"-->
        <!--android:layout_marginLeft="50dp"-->
        <!--android:layout_marginTop="30dp"-->
        <!--android:text="@string/action_sign"-->
        <!--android:enabled="false" />-->
    <Button
        android:id="@+id/reg_confirm"
        android:layout_width="269dp"
        android:layout_height="30dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/b_bt_bg_a"
        android:text="注册"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="16sp" />

    <LinearLayout android:layout_gravity="center_horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="20dp">
        <TextView android:textSize="20dp" android:textColor="@color/tv_color_comm" android:gravity="center|top" android:layout_width="wrap_content" android:layout_height="fill_parent" android:text="@string/reg_agree" />
        <TextView android:textSize="20dp"
            android:textColor="@color/topbar_red_text_color"
            android:gravity="center|top"
            android:id="@+id/tv_pro_content"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="@string/jiao_protocol" />
    </LinearLayout>
</LinearLayout>