                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="利率："
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/tv_ershoufang_shouqililv2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="3.25%"
                            android:textColor="#323232"
                            android:textSize="12sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="利率："
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/tv_ershoufang_ertaolilv2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0.27%"
                            android:textColor="#323232"
                            android:textSize="12sp" />

                    </LinearLayout>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"

                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="年限："
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/tv_ershoufang_shouqinianxian2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="25年"
                                android:textColor="#323232"
                                android:textSize="12sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_shousuofangkai2"
