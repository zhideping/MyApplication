                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="首期："
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/tv_ershoufanganjie_shouqi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="20%"
