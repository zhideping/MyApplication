<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#dddddd"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#4183FF"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#4183FF">

            <RelativeLayout
                android:id="@+id/rl_chaoshifukuan_fanhui"
                android:layout_width="40dp"
                android:layout_height="64dp">

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="7dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="7dp"
                    android:src="@drawable/c_icon_fanhui" />


            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="超市付款"
                android:textColor="@color/white"
                android:textSize="20sp" />
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout

        android:id="@+id/ll_chaoshifukuan_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#ffffff"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_chaoshifukuan_fukuan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="20dp"
                        android:text="点击按钮进入付款"
                        android:textColor="#000000"
                        android:textSize="18sp" />


                    <ImageView
                        android:id="@+id/iv_activity_chaoshifukuan_fukuan"
                        android:layout_width="120dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/g_l_btn_jaiofei" />
                    <ImageView
                        android:id="@+id/imageView8"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="20dp"
                        android:layout_weight="1"
                        android:background="@drawable/g_img_xian" />

                    <LinearLayout
                        android:id="@+id/xiangqing"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">



                        <TextView
                            android:id="@+id/tv_activity_chaoshifukuan_dianming"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="便利店名称"
                            android:textColor="#909090"
                            android:textSize="18sp" />

                        <LinearLayout
                            android:id="@+id/ll_activity_chaoshifukuan_xiangqing"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_activity_chaoshifukuan_xiangqing"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="使用详情"
                                android:textColor="#909090"
                                android:textSize="18sp" />

                            <ImageView
                                android:layout_width="10dp"
                                android:layout_height="18dp"
                                android:layout_marginLeft="10dp"
                                android:background="@drawable/f_btn_jinru" />
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <ListView
                    android:id="@+id/lv_chaoshifukuan"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:scrollbars="none"></ListView>
            </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_chaoshifukuan_wufukuanxiang"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginTop="80dp"
            android:background="@drawable/f_icon_wugonggao" />

        <TextView
            android:id="@+id/tv_wujilu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="当前无付款项"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout

        android:id="@+id/ll_chaoshifukuan_wuwangluo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:layout_width="95dp"
            android:layout_height="75dp"
            android:layout_marginTop="80dp"
            android:background="@drawable/d_icon_wanluoyichang" />

        <TextView
            android:id="@+id/tv_wuwangluo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="网络异常，请检查网络"
            android:textSize="16sp" />
    </LinearLayout>

</LinearLayout>
