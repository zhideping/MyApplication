<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/iv_shangminxiangqing_img"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="@drawable/a_shangchao_img"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"/>


        <ImageView
            android:id="@+id/iv_shangminxiangqing_fanhui"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/c_btn_fanhui"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="-250dp"/>

    </LinearLayout>





    <TextView
        android:id="@+id/tv_shangpinxiangqing_shangpinming"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="姬娜2粒装"
        android:textSize="22sp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"

        >
        <TextView
            android:id="@+id/tv_shangpinxiangqing_xinpin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="新品上架"/>
        <TextView

            android:layout_width="1dp"
            android:layout_height="15dp"
            android:background="#dddddd"
            android:layout_marginLeft="5dp"/>
        <TextView
            android:id="@+id/tv_shangpinxiangqing_xinpinguige"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="重量约310g"
            android:layout_marginLeft="5dp"/>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
       android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp">
        <TextView
            android:id="@+id/tv_shangpinxiangqing_jiage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥88.88"

            android:textColor="#da4692"
            android:layout_weight="1"
            android:textSize="22sp"/>

        <ImageView
            android:id="@+id/iv_shangpinxiangqing_jian"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:background="@drawable/a_btn_jian"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"/>
        <TextView
            android:id="@+id/tv_shangpinxiangqing_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textSize="24sp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"/>
        <ImageView
            android:id="@+id/iv_shangpinxiangqing_jia"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:background="@drawable/a_btn_jia"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"/>

    </LinearLayout>



    <TextView

        android:layout_width="match_parent"
        android:layout_height="1dp"
    android:background="#dddddd"
        android:layout_marginTop="5dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="希洋便利店（某小区店）"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        />
    <TextView

        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#dddddd"
        android:layout_marginTop="5dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"

        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        >
        <TextView
            android:id="@+id/tv_shangpinxiangqing_shangpinjieshao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/jieshao"/>
        <!--<TextView-->
            <!--android:id="@+id/tv_shangpinxiangqing_xinpin1"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:text="新品上架"/>-->
        <!--<TextView-->

            <!--android:layout_width="1dp"-->
            <!--android:layout_height="15dp"-->
            <!--android:background="#dddddd"-->
            <!--android:layout_marginLeft="5dp"/>-->
        <!--<TextView-->
            <!--android:id="@+id/tv_shangpinxiangqing_xinpinguige1"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:text="重量约310g"-->
            <!--android:layout_marginLeft="5dp"/>-->


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
       android:layout_marginTop="-50dp">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:background="#000000"
           >
            <ImageView
                android:id="@+id/m_list_car"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/a_btn_guowuche"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                />

            <TextView
                android:id="@+id/tv_shangpinxiangqing_yuanjiaocount"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:background="@drawable/a_img_tishi"
                android:layout_marginTop="-15dp"
                android:layout_marginLeft="-10dp"
               />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="￥"
                android:textColor="#ffffff"
                android:gravity="center"
                android:textSize="18sp"
                android:layout_marginLeft="15dp"/>
            <TextView
                android:id="@+id/tv_shangpinxiangqing_money"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="99.99"
                android:textSize="18sp"
                android:textColor="#ffffff"/>

        </LinearLayout>
        <TextView
            android:id="@+id/tv_shangpinxiangqing_xuanhaole"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="选好了"
            android:textSize="18sp"
            android:background="#ff7700"/>


    </LinearLayout>

</LinearLayout>
