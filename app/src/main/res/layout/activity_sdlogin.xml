<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/screentViewlayout"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.bjxiyang.zhinengshequ.myapplication.ui.activity.SDLoginActivity">
    <LinearLayout android:orientation="vertical"
        android:id="@+id/layout_need_offset"
        android:background="@color/white"
        android:layout_width="match_parent" android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
    <RelativeLayout android:orientation="vertical"
        android:background="@drawable/nn_zhuce_logo"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginTop="65dp"

        android:layout_gravity="center_horizontal">


    </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="10dp">
            <LinearLayout
                android:id="@+id/loginMenutForm"
                android:layout_width="0.0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:text="登录"
                    android:textColor="#000000"
                    android:layout_gravity="center"/>
                <ImageView
                    android:id="@+id/selected_menu_login"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/registeredMenutForm"
                android:layout_width="0.0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:text="注册"
                    android:textColor="#000000"
                    android:layout_gravity="center"/>
                <ImageView
                    android:id="@+id/selected_menu_regiest"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/loginView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="30dp">
            
            <LinearLayout
                android:id="@+id/username"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginLeft="50dp"
            >

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="12dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/a_icon_shouji_c" />

                <EditText
                    android:id="@+id/et_login_username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="请输入手机号"
                    android:layout_marginLeft="16dp"
                    android:background="@null"
                    android:inputType="number"
                    />
            </LinearLayout>
            <TextView android:background="@color/divider_color" android:layout_width="fill_parent" android:layout_height="1dp" android:layout_marginTop="-10dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="20dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/a_icon_mima_c" />

                <EditText
                    android:id="@+id/et_login_pwd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:background="@null"
                    android:hint="请输入密码"
                    android:inputType="textPassword" />
            </LinearLayout>

            <TextView android:background="@color/divider_color" android:layout_width="fill_parent" android:layout_height="1dp"
                android:layout_marginTop="-10dp"/>

            <Button android:textSize="20dp"
                android:textColor="@color/white"
                android:layout_gravity="center_horizontal"
                android:id="@+id/btn_login"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@drawable/b_btn_degnlu_c"
                android:layout_marginTop="30dp"
                android:layout_marginRight="50dp"
                android:layout_marginLeft="50dp"
                 />
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="50dp"
    android:layout_marginRight="50dp"
    android:layout_marginTop="20dp">

    <ImageButton
        android:id="@+id/checkbox_button"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:background="@drawable/checkboxshap"
        android:clickable="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="记住密码"
        android:textSize="20dp"
        android:layout_marginLeft="35dp"
        android:layout_centerVertical="true"/>

    <TextView
        android:id="@+id/forget_password_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="忘记密码"
        android:textSize="20dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"/>
</RelativeLayout>





        </LinearLayout>

        <include layout="@layout/regiest_content_view" />
    </LinearLayout>

</RelativeLayout>
