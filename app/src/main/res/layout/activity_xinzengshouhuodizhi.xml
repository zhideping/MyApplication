<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#dddddd">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#4183ff"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        >

        <RelativeLayout
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:id="@+id/rl_xinzengshouhuodizhi_fanghui">

            <ImageView
                android:layout_marginLeft="15dp"

                android:layout_width="15dp"
                android:layout_height="21dp"

                android:background="@drawable/c_icon_fanhui" />

        </RelativeLayout>


        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:gravity="center"
            android:text="新增收货地址"
            android:textColor="#ffffff"
            android:textSize="20sp" />
        <RelativeLayout
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:id="@+id/rl_xinzengshouhuodizhi_baocun">

            <TextView
                android:id="@+id/tv_xinzengshouhuodizhi_baocun"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="保存"
                android:textColor="#ffffff"
                android:textSize="17sp"/>

        </RelativeLayout>

        

    </LinearLayout>

    <TextView
       
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center_vertical"
        android:text="联系人"
        android:textSize="18sp"
        android:layout_marginLeft="15dp" 
      />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:orientation="horizontal"
        android:background="#ffffff"
        android:gravity="center_vertical">

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:gravity="center_vertical"
            android:text="姓名:"
            android:textSize="20sp"
            android:layout_marginLeft="15dp" />
        <EditText
            android:background="@null"
            android:id="@+id/et_xinzengshouhuodizhi_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" 
            android:hint="请输入收货人姓名"
            android:layout_marginLeft="10dp"/>
        
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:orientation="horizontal"
        android:background="#ffffff"
       android:gravity="center"
        android:layout_marginTop="1dp">
        <ImageView
            android:id="@+id/iv_xinzengshouhuodizhi_xuanze1"
            android:layout_width="20dp"
            android:layout_height="20dp" 
            android:background="@drawable/b_btn_xuanze_pre"
            />

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:gravity="center_vertical"
            android:text="先生"
            android:textSize="20sp"
            android:layout_marginLeft="10dp" />

        <ImageView
            android:id="@+id/iv_xinzengshouhuodizhi_xuanze2"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="50dp"
            android:background="@drawable/h_btn_xuanze" />

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:gravity="center_vertical"
            android:text="女士"
            android:textSize="20sp"
            android:layout_marginLeft="10dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:orientation="horizontal"
        android:background="#ffffff"
        android:gravity="center_vertical"
        android:layout_marginTop="1dp">

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:gravity="center_vertical"
            android:text="电话:"
            android:textSize="20sp"
            android:layout_marginLeft="15dp" />

        <EditText
            android:background="@null"
            android:id="@+id/et_xinzengshouhuodizhi_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入收货人电话"
            android:layout_marginLeft="10dp" />

    </LinearLayout>

    <TextView

        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center_vertical"
        android:text="收货地址"
        android:textSize="18sp"
        android:layout_marginLeft="15dp" />

    <LinearLayout
        android:id="@+id/lv_selece_dizhi"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="1dp"
        android:background="#ffffff"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView

            android:id="@+id/tv_select_text"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="请选择地址"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/et_xinzengshouhuodizhi_loudong"
            android:layout_width="10dp"
            android:layout_height="20dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/f_btn_jinru" />

    </LinearLayout>

    

</LinearLayout>
